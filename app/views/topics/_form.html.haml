= simple_form_for @topic, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :description
  .form-actions
    = f.button :submit, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), |
      topics_path, :class => 'btn'                                 |