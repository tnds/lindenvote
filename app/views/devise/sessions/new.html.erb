<div class="span6 spancenter">
  <div class="page-header">
    <h2>Login</h2>
  </div>
  <%= simple_form_for resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :login, :wrapper => :prepend do %>
        <span class="add-on"><i class="icon-user"></i></span><%= f.input_field :login, :placeholder => t("username_or_email") %>
    <% end %>

    <%= f.input :password, :wrapper => :prepend do %>
      <span class="add-on"><i class="icon-lock"></i></span><%= f.input_field :password, :placeholder => t("password") %>
    <% end %>

    <% if devise_mapping.rememberable? -%>
      <%= f.input :remember_me, :as => :boolean %>
    <% end -%>
    <%= render "devise/shared/links" %>
    <div class="form-actions centered-content">
      <%= f.submit 'Login', :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>