.span6.spancenter
  .page-header
    %h2= t("forgot_password")
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f|
    = f.error_notification
    .form-inputs
      = f.input :login, :required => true, :autofocus => true, :wrapper => :prepend do
        %span.add-on
          %i.icon-user
        = f.input_field :login, :placeholder => t("username_or_email")
    = render "devise/shared/links"
    .form-actions.centered-content
      = f.button :submit, "Send me reset password instructions"