.span6.spancenter
  .page-header
    %h2= t("change_password")
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f|
    = f.error_notification
    = f.input :reset_password_token, :as => :hidden
    = f.full_error :reset_password_token
    .form-inputs
      = f.input :password, :label => "New password", :required => true, :wrapper => :prepend do
        %span.add-on
          %i.icon-lock
        = f.input_field :password
      = f.input :password_confirmation, :label => "Confirm your new password", :required => true, :wrapper => :prepend do
        %span.add-on
          %i.icon-lock
        = f.input_field :password_confirmation
    = render "devise/shared/links"
    .form-actions.centered-content
      = f.button :submit, "Change my password"