<%= simple_form_for "user", :url => user_session_path, :html => { :class => 'navbar-form form-inline pull-right' } do |f| %>
  <%= f.input :email, :wrapper => :prepend, :label => false do %>
      <span class="add-on"><i class="icon-envelope"></i></span><%= f.input_field :email, :class => "input-small", :placeholder => t("email") %>
  <% end %>
  <%= f.input :password, :wrapper => :prepend, :label => false do %>
    <span class="add-on"><i class="icon-lock"></i></span><%= f.input_field :password, :class => "input-small", :placeholder => t("password") %>
  <% end %>
    <%= f.submit 'Login', :class => 'btn' %>
<% end %>